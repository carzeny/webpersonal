---
interface Props {
    title: string;
    link: string;
	date: string;
    description: string;
	images: string[];
	detail: string;
}
const { title, link, date, description, images, detail } = Astro.props;
---
<article class=" rounded-xl bg-gradient-to-r from-gray-600 via-purple-500 to-violet-400 p-0.5 transition shadow-lg hover:shadow-2xl opacity-80 hover:opacity-100 hover:scale-105 m-10">
	<div class="rounded-[10px] bg-gray-200 p-4 sm:p-6">
		<div class=" w-full flex justify-between text-gray-700">
			{
				images.map((image) => (
					<div class=" w-60">
						<img class="w-full rounded-lg m-4" src={`/${image}`} alt="image" />
					</div>
				))
			}
			<div class="w-full flex justify-center">
				<a href={link} target="_blank">
					<h3 class="mt-0.5 text-lg font-bold">
						{title}
					</h3>
				</a>
			</div>
		</div>
		<div class="mt-4 pl-10 flex justify-center">
            <p class="text-lg text-violet-600">
                {description}
			</p>
		</div>
		<div class="mt-4">
			<h3 class="mt-0.5 text-lg font-medium text-gray-900">
				{date}
			</h3>
		</div>
		<div class="mt-4 ">
			<p class="mt-0.5 text-md indent-7 text-gray-900 text-justify">
				<Fragment set:html={detail}/>
			</p>
		</div>
	</div>
</article>