---
import Layout from '../layouts/Layout.astro'

---
<Layout>
    <div slot="article" class="w-full flex justify-center dark:bg-violet-200 dark:text-white mt-5 mb-5">
		<div class=" md:max-w-5xl md:flex items-center justify-center">
			<div class=" w-full flex justify-center md:hidden mt-16 mb-10">
			</div>
			<div>
				<div class=" ml-5  p-3 rounded-xl" >
					<h1 class="text-2xl font-bold italic text-transparent bg-clip-text bg-gradient-to-r from-gray-600 via-purple-500 to-violet-400">Juego encontrar numeros cosecutivos</h1>
					<br>
				</div>
                <div class="grid grid-cols-3 gap-3 items-center justify-center">
                    <div><img id="num0" src="/public/cinco.png" width= "150px" height="130px" onclick="{cargarNum(0);}"/>
                    </div>
                    <div></div>
                    <div><img id="num1" src="/public/dos.png" width= "150px" height="130px" onclick="{cargarNum(1)}"/></div>
                    <div></div>
                    <div><img id="num2" src="/public/ocho.png" width= "150px" height="130px" onclick="{cargarNum(2)}"/></div>
                    <div></div>
                    <div><img id="num3" src="/public/cero.png" width= "150px" height="130px" onclick="{cargarNum(3)}"/></div>
                    <div></div>
                    <div><img id="num4" src="/public/cuatro.png" width= "150px" height="130px" onclick="{cargarNum(4)}"/></div> 
                </div>
                
                <div class="flex justify-center">
                    <button id="btn" class=" bg-violet-400 rounded-lg p-2" onclick="{voltear()}">  J u g a r  </button>
                </div>
			</div>
		</div>
	</div>
</Layout>